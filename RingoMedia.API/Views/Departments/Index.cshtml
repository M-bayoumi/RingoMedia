@model IEnumerable<RingoMedia.BLL.ViewModels.DepartmentVM.DepartmentReadVM>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center align-middle">
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentLogo)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center align-middle">
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DepartmentName)
                        </td>
                        <td>
                            <img class="rounded-circle" src="@Url.Action("DisplayLogo","Departments", new { departmentID = item.DepartmentID })" alt="Image" style="max-width: 130px; height: 130px" />
                        </td>
                        <td>
                            <a asp-controller="Departments" asp-action="Details" asp-route-id="@item.DepartmentID" class="btn btn-outline-info"><i class="bi bi-eye"></i> Details</a> 
                            @* <a asp-controller="Departments" asp-action="Edit" asp-route-id="@item.DepartmentID" class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i> Edit</a> | *@
                            @* <a asp-controller="Departments" asp-action="Delete" asp-route-id="@item.DepartmentID" class="btn btn-danger text-white"><i class="bi bi-trash"></i> Delete</a> *@
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white" style="position:fixed; right: 20px; bottom: 20px; z-index:1000;">
    <a asp-controller="Departments" asp-action="Add" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>
